<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <include
        android:layout_width="match_parent"
        android:layout_height="55dp"
        layout="@layout/top_area" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|left"
        android:background="@android:color/holo_blue_dark"
        >
        <TextView
            android:id="@+id/id_schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="교육강좌명"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/id_schedule_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:textSize="13sp"
            android:text="교육기관 주소"
            android:drawableLeft="@drawable/office"
            android:drawablePadding="5dp"
            android:textColor="#bbffffff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:gravity="right">
            <Button
                android:id="@+id/id_schedule_btn_map"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="@drawable/drw_btn"
                android:textColor="@android:color/white"
                android:text="위치보기"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="11sp"/>
            <Button
                android:id="@+id/id_schedule_btn_homepage"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@drawable/drw_btn"
                android:textColor="@android:color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="홈페이지"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/id_schedule_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#11000000"
        android:dividerHeight="0.67dp"></ListView>

</LinearLayout>