<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/drw_list">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/education"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/id_item_status"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@drawable/status_educate"
            android:text="교육중"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:shadowRadius="2"
            android:shadowColor="#FF333333"
            android:shadowDx="1"
            android:shadowDy="1"/>
        <TextView
            android:id="@+id/id_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textColor="#CC000000"
            android:text="교육강좌"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="65dp">

        <TextView
            android:id="@+id/id_item_organ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#88000000"
            android:text="- 교육기관"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/level"
            android:drawablePadding="3dp"
            android:textColor="#88000000"
            android:textSize="11sp"
            android:text="난이도"/>
        <TextView
            android:id="@+id/id_item_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="11sp"
            android:text="초급"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <View
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:background="#44000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/card"
            android:drawablePadding="3dp"
            android:textSize="11sp"
            android:textColor="#88000000"
            android:text="수강료"/>
        <TextView
            android:id="@+id/id_item_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:textSize="11sp"
            android:text="300,000원"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>